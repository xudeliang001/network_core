<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.uca.network.core.mapper.network.NetworkMapper">


    <resultMap id="networkMap" type="com.uca.network.core.mapper.network.dto.NetworkDto">
        <result column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="tenant_id" jdbcType="VARCHAR" property="tenantId"/>
        <result column="status" jdbcType="VARCHAR" property="status"/>
        <result column="admin_state_up" jdbcType="VARCHAR" property="adminStateUp"/>
        <result column="created_at" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="updated_at" jdbcType="TIMESTAMP" property="updateTime"/>
        <result column="standard_attr_id" jdbcType="VARCHAR" property="standardAttrId"/>

    </resultMap>

    <select id="queryNetworksByParam" resultMap="networkMap">
        SELECT * FROM networks where 1 = 1
        <if test="tenantId !=null">
            and tenant_id = #{tenantId}
        </if>
        <if test="networkId !=null">
            and id = #{networkId}
        </if>
        <if test="networkIds!=null and networkIds.size()>0">
            and network_id in
            <foreach collection="networkIds" item="networkId" index="no" open="("
                     separator="," close=")">
                #{networkId}
            </foreach>
        </if>
    </select>


    <insert id="insertNetwork" parameterType="com.uca.network.core.mapper.network.dto.NetworkDto">
        insert into networks
        (
        id,
        name,
        tenant_id,
        status,
        admin_state_up,
        created_at,
        updated_at
        )
        values
        (
        #{id},
        #{name},
        #{tenant_id},
        #{status},
        #{admin_state_up},
        #{createTime},
        #{updateTime}
        )
    </insert>

    <delete id="deleteNetworkById">

        delete from network where id = #{id}
    </delete>


</mapper>

