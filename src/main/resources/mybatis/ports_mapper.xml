<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.uca.network.core.mapper.ports.PortsMapper">


    <resultMap id="portsMap" type="com.uca.network.core.mapper.ports.dto.PortsDto">
        <result column="tenant_id" jdbcType="VARCHAR" property="tenantId"/>
        <result column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="network_id" jdbcType="VARCHAR" property="networkId"/>
        <result column="mac_address" jdbcType="VARCHAR" property="macAddress"/>
        <result column="admin_state_up" jdbcType="VARCHAR" property="adminStateUp"/>
        <result column="status" jdbcType="VARCHAR" property="status"/>
        <result column="device_owner" jdbcType="VARCHAR" property="deviceOwner"/>
        <result column="device_id" jdbcType="VARCHAR" property="deviceId"/>
        <result column="standard_attr_id" jdbcType="BIGINT" property="standardAttrId"/>
        <result column="created_at" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="updated_at" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <select id="queryPortsByParam" resultMap="portsMap">
        select id,tenadnt_id,name,network_id,mac_address,admin_state_up,status,device_id,device_owner,
        standard_attr_id,created_at,updated_at
        from
        ports t_attr where 1 = 1

        <if test="deviceId!=null">
            and device_id = #{deviceId}
        </if>

        <if test="deviceIds!=null and deviceIds.size()>0">
            and device_id in
            <foreach collection="deviceIds" item="deviceId" index="no" open="("
                     separator="," close=")">
                #{deviceId}
            </foreach>
        </if>

        <if test="deviceOwner!=null">
            and device_owner = #{deviceOwner}
        </if>

        <if test="tenantId!=null">
            and tenant_id = #{tenantId}
        </if>

        <if test="networkId!=null">
            and network_id = #{networkId}
        </if>

        <if test="networkIds!=null and networkIds.size()>0">
            and network_id in
            <foreach collection="networkIds" item="networkId" index="no" open="("
                     separator="," close=")">
                #{networkId}
            </foreach>
        </if>

        <if test="id!=null">
            and id = #{id}
        </if>

        <if test="ids!=null and ids.size()>0">
            and device_id in
            <foreach collection="ids" item="id" index="no" open="("
                     separator="," close=")">
                #{id}
            </foreach>
        </if>

    </select>




</mapper>

