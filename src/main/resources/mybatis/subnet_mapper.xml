<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.uca.network.core.mapper.subnet.SubnetMapper">


    <resultMap id="subnetMap" type="com.uca.network.core.mapper.subnet.dto.SubnetDto">
        <result column="id" jdbcType="VARCHAR" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="tenant_id" jdbcType="VARCHAR" property="tenantId"/>
        <result column="network_id" jdbcType="VARCHAR" property="networkId"/>
        <result column="cidr" jdbcType="VARCHAR" property="cidr"/>
        <result column="gateway_ip" jdbcType="VARCHAR" property="gatewayIp"/>
        <result column="standard_attr_id" jdbcType="BIGINT" property="standardAttrId"/>
        <result column="ip_version" jdbcType="TINYINT" property="ipVersion"/>
        <result column="created_at" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="updated_at" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>

    <select id="querySubnetsByParam" resultMap="subnetMap">
        SELECT * FROM subnets where 1 = 1
        <if test="tenantId !=null">
            and tenant_id = #{tenantId}
        </if>
        <if test="networkId !=null">
            and network_id = #{networkId}
        </if>
        <if test="networkIds!=null and networkIds.size()>0">
            and network_id in
            <foreach collection="networkIds" item="networkId" index="no" open="("
                     separator="," close=")">
                #{networkId}
            </foreach>
        </if>
        <if test="ids!=null and ids.size()>0">
            and id in
            <foreach collection="ids" item="id" index="no" open="("
                     separator="," close=")">
                #{id}
            </foreach>
        </if>
        <if test="id !=null">
            and id = #{id}
        </if>
    </select>

    <insert id="insertSubent" parameterType="com.uca.network.core.mapper.subnet.dto.SubnetDto">

      insert into subnets(
      id,
      name,
      tenant_id,
      network_id,
      cidr,
      gateway_ip,
      standard_attr_id,
      ip_version,
      created_at,
      updated_at
      )
      values
      (
      #{id},
      #{name},
      #{tenantId},
      #{networkId},
      #{cidr},
      #{gatewayIp},
      #{standardAttrId},
      #{ipVersion},
      #{createTime},
      #{updateTime}
      )
    </insert>
    <delete id="deleteSubnetByParam" parameterType="java.util.Map">
        delete from subents where 1 = 1
        <if test="param.id!=null">
           and id = #{param.id}
        </if>
        <if test="param.networkId!=null">
            and network_id = #{param.networkId}
        </if>
    </delete>


</mapper>

